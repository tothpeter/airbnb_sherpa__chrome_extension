{
  "manifest_version": 3,
  "name": "Airbnb Listing Hider",
  "version": "1.0",
  "description": "Hide or unhide listings on Airbnb search and wishlists pages",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "include_globs": [
        "*://*.airbnb.*/*"
      ],
      "js": [
        "search/content.js"
      ],
      "css": [
        "search/styles.css"
      ]
    }
  ]
}
